<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".Claim">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="2dp"
            app:cardBackgroundColor="#4500BCD4" app:contentPadding="2dp" app:cardCornerRadius="5dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/claimIdField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="2dp"/>
                <TextView
                        android:id="@+id/claimLocField"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="2dp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/claimDesField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>